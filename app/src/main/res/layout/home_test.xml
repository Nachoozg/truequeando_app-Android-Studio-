<?xml version="1.0" encoding="utf-8"?>
<!-- Define un DrawerLayout como contenedor de diseño raíz -->
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/fondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backColor"
        android:backgroundTint="@color/backColor">

        <ImageView
            android:id="@+id/perro"
            android:layout_width="60dp"
            android:layout_height="62dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/perro" />

        <ImageButton
            android:id="@+id/menu_desplegable"
            android:layout_width="78dp"
            android:layout_height="75dp"
            android:layout_marginTop="4dp"
            android:backgroundTint="@color/backColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/tresrallitasmenu" />

        <ImageView
            android:id="@+id/guardados"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/home1"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lineadivisoria"
            app:srcCompat="@drawable/guardar" />

        <ImageView
            android:id="@+id/home1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="92dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/chat1"
            app:layout_constraintTop_toTopOf="@+id/lineadivisoria"
            app:srcCompat="@drawable/home" />

        <ImageView
            android:id="@+id/chat1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="44dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lineadivisoria"
            app:srcCompat="@drawable/chat" />

        <View
            android:id="@+id/lineadivisoria"
            android:layout_width="409dp"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.913" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/anadirproducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="339dp"
            android:layout_marginTop="592dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="18dp"
            android:clickable="true"
            app:backgroundTint="@color/DarkBlue"

            app:layout_constraintBottom_toTopOf="@+id/lineadivisoria"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@android:drawable/ic_menu_add" />

        <ImageView
            android:id="@+id/zapatillas1"
            android:layout_width="154dp"
            android:layout_height="193dp"
            android:layout_marginStart="-6dp"
            android:layout_marginTop="152dp"
            app:layout_constraintEnd_toStartOf="@+id/iphone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/zapatillas" />

        <ImageView
            android:id="@+id/iphone"
            android:layout_width="154dp"
            android:layout_height="193dp"
            android:layout_marginStart="-15dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/coche1"
            app:layout_constraintEnd_toStartOf="@+id/zapatillas2"
            app:layout_constraintStart_toEndOf="@+id/zapatillas1"
            app:srcCompat="@drawable/iphone" />

        <ImageView
            android:id="@+id/zapatillas2"
            android:layout_width="154dp"
            android:layout_height="193dp"
            android:layout_marginStart="-20dp"
            android:layout_marginTop="152dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iphone"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/dunk" />

        <ImageView
            android:id="@+id/coche1"
            android:layout_width="154dp"
            android:layout_height="193dp"
            android:layout_marginStart="-10dp"
            android:layout_marginBottom="104dp"
            app:layout_constraintBottom_toTopOf="@+id/lineadivisoria"
            app:layout_constraintEnd_toStartOf="@+id/gorra"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/cochemalo" />

        <ImageView
            android:id="@+id/gorra"
            android:layout_width="154dp"
            android:layout_height="193dp"
            android:layout_marginStart="-15dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="104dp"
            app:layout_constraintBottom_toTopOf="@+id/lineadivisoria"
            app:layout_constraintEnd_toStartOf="@+id/coche2"
            app:layout_constraintStart_toEndOf="@+id/coche1"
            app:srcCompat="@drawable/gorra" />

        <ImageView
            android:id="@+id/coche2"
            android:layout_width="154dp"
            android:layout_height="193dp"
            android:layout_marginStart="-20dp"
            app:layout_constraintBottom_toTopOf="@+id/lineadivisoria"
            app:layout_constraintStart_toEndOf="@+id/gorra"
            app:layout_constraintTop_toBottomOf="@+id/zapatillas2"
            app:layout_constraintVertical_bias="0.187"
            app:srcCompat="@drawable/volvo" />

        <ImageView
            android:id="@+id/coche3"
            android:layout_width="130dp"
            android:layout_height="87dp"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toTopOf="@+id/lineadivisoria"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/golf" />

        <ImageView
            android:id="@+id/plei"
            android:layout_width="130dp"
            android:layout_height="88dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/lineadivisoria"
            app:layout_constraintStart_toEndOf="@+id/coche3"
            app:srcCompat="@drawable/noseque" />

        <ImageView
            android:id="@+id/portatil"
            android:layout_width="130dp"
            android:layout_height="87dp"
            android:layout_marginEnd="6dp"
            app:layout_constraintBottom_toTopOf="@+id/lineadivisoria"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/pantallarara" />

        <ImageButton
            android:id="@+id/imageButton10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="80dp"
            android:backgroundTint="@color/backColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_menu_search"
            app:tint="@color/DarkBlue" />



        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="44dp"
            android:layout_height="38dp"
            android:layout_marginEnd="56dp"
            android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toTopOf="@+id/zapatillas2"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/aaa" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="79dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/zapatillas1"
            app:layout_constraintEnd_toStartOf="@+id/imageView13"
            app:srcCompat="@drawable/coches" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="79dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/iphone"
            app:layout_constraintEnd_toStartOf="@+id/imageView14"
            app:srcCompat="@drawable/ropa" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="76dp"
            android:layout_height="25dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView11"
            app:layout_constraintTop_toBottomOf="@+id/imageButton10"
            app:srcCompat="@drawable/tech" />

        <EditText
            android:id="@+id/barrabusqueda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="text"
            android:text="Buscar"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/guardados1"
            android:layout_width="30dp"
            android:layout_height="29dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="28dp"
            android:backgroundTint="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/coche1"
            app:layout_constraintEnd_toEndOf="@+id/zapatillas1"
            app:srcCompat="@drawable/guardados" />

        <ImageButton
            android:id="@+id/guardados2"
            android:layout_width="30dp"
            android:layout_height="29dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="28dp"
            android:backgroundTint="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/gorra"
            app:layout_constraintEnd_toEndOf="@+id/iphone"
            app:srcCompat="@drawable/guardados" />

        <ImageButton
            android:id="@+id/guardado_rell1"
            android:layout_width="29dp"
            android:layout_height="26dp"
            android:layout_marginStart="112dp"
            android:layout_marginBottom="28dp"
            android:backgroundTint="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/coche2"
            app:layout_constraintStart_toEndOf="@+id/guardados2"
            app:srcCompat="@drawable/guardados_relleno" />

        <ImageButton
            android:id="@+id/guardado_rell2"
            android:layout_width="29dp"
            android:layout_height="26dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/coche3"
            app:layout_constraintEnd_toEndOf="@+id/coche1"
            app:srcCompat="@drawable/guardados_relleno" />

        <ImageButton
            android:id="@+id/guardados3"
            android:layout_width="30dp"
            android:layout_height="29dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/plei"
            app:layout_constraintEnd_toEndOf="@+id/gorra"
            app:srcCompat="@drawable/guardados" />

        <ImageButton
            android:id="@+id/guardados4"
            android:layout_width="30dp"
            android:layout_height="29dp"
            android:layout_marginStart="108dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/portatil"
            app:layout_constraintStart_toEndOf="@+id/guardados3"
            app:srcCompat="@drawable/guardados" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu"
        app:itemIconTint="@color/lavender"
        app:itemTextColor="@color/lavender"/>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottomAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/white"
            app:fabCradleMargin="10dp"
            app:fabCradleRoundedCornerRadius="50dp">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottomNavigationView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:background="@android:color/transparent"
                app:labelVisibilityMode="labeled"
                app:menu="@menu/bottom_menu" />

        </com.google.android.material.bottomappbar.BottomAppBar>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:src="@drawable/baseline_add_24"
            app:layout_anchor="@id/bottomAppBar"
            app:maxImageSize="40dp"
            android:id="@+id/fab"
            app:tint="@color/lavender" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.drawerlayout.widget.DrawerLayout>